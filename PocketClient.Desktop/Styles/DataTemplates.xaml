<ResourceDictionary
    x:Class="PocketClient.Desktop.Styles.DataTemplates"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >

    <DataTemplate x:Key="NavigationViewHeaderTemplate">
        <Grid>
            <TextBlock
                Text="{Binding}"
                Style="{ThemeResource TitleTextBlockStyle}" />
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="NoSelectionContentTemplate">
        <Grid>
            <TextBlock
                x:Uid="ItemListControl_NoSelection"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                TextAlignment="Center"
                Style="{StaticResource SubtitleTextBlockStyle}" />
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="DefaultListHeaderTemplate">
        <Grid>
            <TextBlock Style="{StaticResource ListHeaderStyle}" Text="{Binding}" />
        </Grid>
    </DataTemplate>
</ResourceDictionary>
